@{
    ViewData["Title"] = "Home Page";
}

<style>
    .header {
        border: 2px solid #17a2b8; /* Blue border like the button color */
        background-color: #17a2b8; /* Background color same as btn-info */
        padding: 20px; /* Some padding */
        margin-bottom: 20px; /* Optional: space below the header */
        border-radius: 10px;
    }

    #calendar-side {
        border-top-left-radius: 10px;
        border-bottom-left-radius: 10px;
    }

    #events-side {
        border-top-right-radius: 10px;
        border-bottom-right-radius: 10px;
    }

    #events-list {
        width: 90%;
        height: 400px; /* Sabit bir yükseklik */
        overflow-y: auto; /* Kaydırılabilir hale getirme */
        border: 1px solid #ccc;
        padding: 10px;
    }

    #events-side h2 {
        position: sticky;
        top: 0;
        background-color: white;
        z-index: 10;
        padding: 10px 0;
        margin: 0;
        text-align: center;
    }

    .calendar-container {
        margin-top: 20px;
    }

    .calendar-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 10px;
    }

    .calendar-table th, .calendar-table td {
        text-align: center;
        padding: 5px;
        border: 1px solid #ccc;
    }
    .calendar-table .calendar-day:hover {
        cursor: pointer;
        background-color: #f8f9fa;
    }
</style>

<div class="text-center">
    <div class="header">
        <h1 class="display-5">Event and Activity Recommender</h1>
    </div>

    <div class="row">
        <!-- Left Side (Calendar) -->
        <div class="d-flex flex-column align-items-center border flex-fill col-sm-12 col-lg-6" id="calendar-side">
            <!-- Takvim -->
            <div class="calendar-container">
                <div class="calendar-header">
                    <button id="prev-month" class="btn btn-info">Previous</button>
                    <span id="month-name"></span>
                    <button id="next-month" class="btn btn-info">Next</button>
                </div>
                <table class="calendar-table">
                    <thead>
                        <tr>
                            <th>Monday</th>
                            <th>Tuesday</th>
                            <th>Wednesday</th>
                            <th>Thursday</th>
                            <th>Friday</th>
                            <th>Saturday</th>
                            <th>Sunday</th>
                        </tr>
                    </thead>
                    <tbody id="calendar-body"></tbody>
                </table>
            </div>

            <!-- Özel gün ekleme formu -->
            <div class="add-special-day mt-3">
                <input type="date" id="special-date" class="form-control mb-2" />
                <input type="text" id="special-label" class="form-control mb-2" placeholder="Special day description" />
                <button id="add-special-day" class="btn btn-info">Add Special Day</button>
            </div>
        </div>

        <!-- Right Side (Events Area) -->
        <div class="d-flex flex-column border flex-fill col-sm-12 col-lg-6" id="events-side">
            <div class="d-flex flex-column align-items-center justify-content-center">
                <h2>Upcoming Events</h2>
                <div id="events-list">
                    <!-- Etkinlikler buraya dinamik olarak eklenecek -->
                    <p>No events yet. Add special days to populate events here.</p>
                </div>
            </div>
            <!-- Proceed Button -->
            <div class="d-flex align-items-center justify-content-center border flex-fill" style="margin-top: 10px;">
                <a class="btn btn-info" role="button" asp-action="Index" asp-controller="Chat">Proceed to Chatbot</a>
            </div>
        </div>
    </div>
</div>

<!-- Footer -->
<footer class="border-top footer text-muted">
    <div class="container" style="text-align: center; height: 5rem; padding-top: 2rem;">
        &copy; 2024 - Made with <i class="bi bi-heart"></i> by Arda, Betül, Beyza, Leen & Rahma
    </div>
</footer>

